# Dockerfile для разработки frontend
FROM node:18-alpine

WORKDIR /app

# Копируем package.json
COPY package.json ./
COPY package-lock.json* ./

# Устанавливаем зависимости
RUN npm install --legacy-peer-deps

# Копируем исходный код
COPY . .

# Открываем порт
EXPOSE 3000

# Запускаем dev сервер
CMD ["npm", "start"]
